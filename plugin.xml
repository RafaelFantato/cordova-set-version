<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-set-version"
        version="1.0.0">
    <name>Cordova Replace Icons</name>
    <description>Sobrescreve os ícones do Android com base em arquivos ZIP (dev ou tst) durante o build.</description>
    <license>MIT</license>
    <keywords>cordova, icons, replace, android</keywords>
    <author>Rafael Fantato</author>

    <preference name="NEW_VERSION"/>
    
    <!-- Plataformas suportadas -->
    <platform name="android">
        <!-- Hook para substituir ícones antes do build -->
        <hook type="before_build" src="src/set-new-version.js" />
        <config-file target="config.xml" parent="/*">
            <preference name="NEW_VERSION" value="$NEW_VERSION"/>
        </config-file>
    </platform>


    <!-- Adicionado suporte iOS: mesmo hook e preferência -->
    <platform name="ios">
        <hook type="before_build" src="src/set-new-version-ios.js" />
        <config-file target="config.xml" parent="/*">
            <preference name="NEW_VERSION" value="$NEW_VERSION"/>
        </config-file>
    </platform>

</plugin>